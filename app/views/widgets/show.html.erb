<% if flash[:notice] %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="page-header"><h2><%= "Widget: #{@widget.name}  " %><small>Rails is Awesome</small></h2></div>

<p>
  <b>Description:</b>
  <%= @widget.description %>
</p>

<p>
  <b>Color:</b>
  <%= @widget.color %>
</p>

<p>
  <b>Size:</b>
  <%= @widget.size %>
</p>

<p>
	<b>Box:</b>
	<%= @widget.box ? @widget.box.material : "None" %>
</p>

<%= link_to 'Back', widgets_path, class: "btn btn-small" %> | <%= link_to 'Edit', edit_widget_path(@widget), class: "btn btn-small" %>
