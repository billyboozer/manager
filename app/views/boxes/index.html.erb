<div class="page-header"><h2>Listing Boxes  <small>Rails is Awesome</small></h2></div>

<table class="listing table table-striped table-bordered table-hover">
  <tr>
    <th>Material</th>
    <th>Color</th>
    <th>Widget</th>
    <th colspan="3">Actions</th>
  </tr>

<% @boxes.each do |box| %>
  <tr>
    <td><%= box.material %></td>
    <td><%= box.color %></td>
    <td><%= box.widget ? box.widget.name : "None" %></td>
    <td><%= link_to 'Show', box, class: "btn btn-success btn-small" %></td>
    <td><%= link_to 'Edit', edit_box_path(box), class: "btn btn-warning btn-small" %></td>
    <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Box', new_box_path, class: "btn btn-large btn-block pull-center" %>
