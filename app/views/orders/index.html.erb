<div class="page-header"><h2>Listing Orders  <small>Rails is Awesome</small></h2></div>

<table class="listing table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Placed on</th>
    <th colspan="3">Actions</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.name %></td>
    <td style="font-style:italic;font-weight:600;color:#696969"><%= big_date(order.created_at) %></td>
    <td><%= link_to 'Show', order, class: "btn btn-success btn-small" %></td>
    <td><%= link_to 'Edit', edit_order_path(order), class: "btn btn-warning btn-small" %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete, class: "btn btn-danger btn-small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path, class: "btn btn-large btn-block pull-center" %>
